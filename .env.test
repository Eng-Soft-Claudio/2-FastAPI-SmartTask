# .env.test

# MongoDB (fictício ou real, dependendo da execução)
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=smarttask_test_db

# JWT
JWT_SECRET_KEY=dummy-test-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# E-mail (desativado nos testes)
MAIL_ENABLED=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_SERVER=
MAIL_PORT=587

# Webhook configurado com segredo dummy
WEBHOOK_URL=http://localhost/test-webhook
WEBHOOK_SECRET=dummy-secret

# Outras configs
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
EMAIL_TEMPLATES_DIR=app/email-templates/build
EMAIL_URGENCY_THRESHOLD=100.0
FRONTEND_URL=http://localhost:3000

# Redis (para testes com limiter ou worker)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=DEBUG

# Ambiente
ENVIRONMENT=test
