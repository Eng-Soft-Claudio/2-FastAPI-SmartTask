# .env.test

# MongoDB Local para testes
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=smarttask_test_db

# Configurações de JWT
JWT_SECRET_KEY=dummy-test-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Configurações de E-mail (Desativado para testes)
MAIL_ENABLED=false
MAIL_USERNAME=TestUser
MAIL_PASSWORD=password123
MAIL_FROM=test@example.com
MAIL_SERVER=
MAIL_PORT=587

# Webhook para ambiente de testes
WEBHOOK_URL=http://localhost/test-webhook
WEBHOOK_SECRET=dummy-secret

# Configurações de CORS
CORS_ALLOWED_ORIGINS='["http://localhost", "http://127.0.0.1"]'

# Diretório de templates de e-mail
EMAIL_TEMPLATES_DIR=app/email-templates/build

# Parâmetros de urgência de e-mail
EMAIL_URGENCY_THRESHOLD=100.0

# Frontend para ambiente local
FRONTEND_URL=http://localhost:3000

# Redis (somente se necessário para testes)
REDIS_URL=redis://localhost:6379/0

# Configurações de logging
LOG_LEVEL=DEBUG

# Definição do ambiente
ENVIRONMENT=test
